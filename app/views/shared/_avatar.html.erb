<div class="col-sm-3">
    <div class="panel widget light-widget panel-bd-top">
        <div class="well">
        <div class="text-center vd_info-parent">                 
                <%= image_tag "https://i0.wp.com/www.winhelponline.com/blog/wp-content/uploads/2017/12/user.png?fit=256%2C256&quality=100&ssl=1&fbclid=IwAR0FlAI1tk8znz2yylkavYP4POSqjKNJNe0I6hHKy2sPDfrrs2riIaxXiwo" ,class: "avatar" %>
              
            </div>
            <div class="row">
            </div>
            <h2 class="font-semibold mgbt-xs-5"><%= link_to @user.name, current_user %></h2>
            <div class="mgtp-20">
                
                <% if @user.id == current_user.id %>
                <table class="table table-striped table-hover" >
                    <tbody >                        

                        <tr>
                            <td align="center">
                                <i class="fa fa-pencil-square-o" style="color: #1866b1;"></i>
                                <%= link_to "Edit profile", edit_user_path(current_user) %> </td>
                            </tr>
                            <tr>
                                <td align="center">
                                    <i class="fa fa-file" style="color: #1866b1;"></i>
                                    <%= link_to "Write post..", new_micropost_path %> </td>
                                </tr>


                            </tbody>
                        </table>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>