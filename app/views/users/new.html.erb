<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <h2>Sign Up </h2>
      <hr class="colorgraph">
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control input-lg", placeholder: "Display Name", tabindex: "3" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control input-lg", placeholder: "Email Address", tabindex: "4" %>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.password_field :password, class: "form-control input-lg", placeholder: "Password", tabindex: "5" %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "Confirm Password", tabindex: "6" %>
          </div>
        </div>
      </div>
      
      
      <hr class="colorgraph">
      <div class="row">
      <center>
        <div style="width: 200px;"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
      </center>  
      </div>
     <% end %>
  </div>

<!-- Modal -->

</div>
<style type="text/css">
