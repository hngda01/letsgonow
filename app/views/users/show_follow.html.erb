<body style="background: url(images/background/8.jpg)">
  <div class="container-fuild">

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="col-md-3 header-inner">
            <a href="#"><img src="images/logo.png" alt=""></a>
          </div>
        </div>

        <div class="col-md-12">
          <div class="row profile">
            <%= render 'shared/avatar' %>
            <div class="col-sm-9">
              <div class="tabs widget">
                <div class="tab-content">


                  <div class="col-md-8">
                    <h3><%= @title %></h3>
                    <% if @users.any? %>
                    <ul class="users follow">
                      <% @users.each do |user| %>
                      <li>
                        <% if user.picture? %>
                        <%= image_tag user.picture.url ,style:"width: 50px;height:50px;" %>
                        <% else %>
                        <img src="following/s2.jpg" style="width: 50px;height:50px;">
                        <% end %>
                        <%= link_to user.name, user,class: "page-newsfeed-06" %>

                      </li>
                      <% end %>
                    </ul>
                    <%= will_paginate @users %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>
